@model List<RecipeModel>
@{
    ViewData["Title"] = "Home Page";
}


<h3 class="text-light">Recipes</h3>

<ul class="grid">
    @foreach (var recipe in Model)
    {
    <li>
        <div class="card bg-secondary">
            <div class="card-body">
                <h5 class="card-title">@recipe.Name</h5>
                <pre class="card-text">Prep Time: @recipe.PrepTime min</pre>
                <pre class="card-text">  Prep Time: @recipe.CookTime min</pre>
            <a href="#" class="btn btn-success stretched-link">View Recipe</a>
            </div>
        </div>
    </li>
    }
</ul>